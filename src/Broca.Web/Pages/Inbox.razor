@page "/inbox"
@using Broca.Web.Services
@using Broca.ActivityPub.Components
@inject AuthenticationStateService AuthState
@inject NavigationManager Navigation

<PageTitle>Inbox - Broca</PageTitle>

@if (!AuthState.IsAuthenticated)
{
    <FluentCard>
        <h2>Authentication Required</h2>
        <p>Please login to view your inbox.</p>
        <FluentButton Appearance="Appearance.Accent" OnClick="@(() => Navigation.NavigateTo($"/login?returnUrl={Uri.EscapeDataString("/inbox")}"))">
            Login
        </FluentButton>
    </FluentCard>
}
else
{
    <div class="inbox-container">
        <FluentCard Class="inbox-header">
            <h1>
                <FluentIcon Value="@(new Icons.Regular.Size24.Mail())" Color="Color.Accent" />
                Inbox
            </h1>
            <p>Activities sent to you from other actors</p>
        </FluentCard>

        @if (_inboxUrl != null)
        {
            <ActivityFeed 
                CollectionUrl="@_inboxUrl" 
                PageSize="20"
                UseVirtualization="true"
                ShowObjects="true"
                ShowRecipients="false">
                <EmptyTemplate>
                    <FluentCard Class="empty-state">
                        <FluentIcon Value="@(new Icons.Regular.Size48.MailInbox())" Color="Color.Neutral" />
                        <h3>Your inbox is empty</h3>
                        <p>When other actors interact with you, their activities will appear here.</p>
                    </FluentCard>
                </EmptyTemplate>
                <ErrorTemplate Context="error">
                    <FluentCard Class="error-state">
                        <FluentIcon Value="@(new Icons.Regular.Size48.Warning())" Color="Color.Error" />
                        <h3>Failed to load inbox</h3>
                        <p>@error</p>
                        <FluentButton Appearance="Appearance.Accent" OnClick="@(() => StateHasChanged())">
                            Retry
                        </FluentButton>
                    </FluentCard>
                </ErrorTemplate>
            </ActivityFeed>
        }
        else
        {
            <FluentCard>
                <FluentIcon Value="@(new Icons.Regular.Size24.Warning())" Color="Color.Warning" />
                <p>Unable to determine inbox URL for this actor.</p>
            </FluentCard>
        }
    </div>
}

@code {
    private Uri? _inboxUrl;

    protected override void OnInitialized()
    {
        // Subscribe to authentication state changes
        AuthState.AuthenticationStateChanged += OnAuthStateChanged;
        
        // Get inbox URL
        UpdateInboxUrl();
    }

    private void OnAuthStateChanged(object? sender, bool isAuthenticated)
    {
        UpdateInboxUrl();
        InvokeAsync(StateHasChanged);
    }

    private void UpdateInboxUrl()
    {
        _inboxUrl = AuthState.GetInboxUrl();
    }

    public void Dispose()
    {
        AuthState.AuthenticationStateChanged -= OnAuthStateChanged;
    }
}

<style>
    .inbox-container {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        max-width: 800px;
        margin: 0 auto;
    }

    .inbox-header h1 {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin: 0 0 0.5rem 0;
    }

    .inbox-header p {
        margin: 0;
        color: var(--neutral-foreground-hint);
    }

    .empty-state,
    .error-state {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 3rem 2rem;
        text-align: center;
        gap: 1rem;
    }

    .empty-state h3,
    .error-state h3 {
        margin: 0;
    }

    .empty-state p,
    .error-state p {
        margin: 0;
        color: var(--neutral-foreground-hint);
    }
</style>
