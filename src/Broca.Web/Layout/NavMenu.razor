@using Broca.Web.Services
@inject AuthenticationStateService AuthState

<div class="navmenu">
    <input type="checkbox" title="Menu expand/collapse toggle" id="navmenu-toggle" class="navmenu-icon" />
    <label for="navmenu-toggle" class="navmenu-icon"><FluentIcon Value="@(new Icons.Regular.Size20.Navigation())" Color="Color.Fill" /></label>
    <nav class="sitenav" aria-labelledby="main-menu">
        <FluentNavMenu Id="main-menu" Width="250" Collapsible="true" Title="Navigation menu" @bind-Expanded="expanded" CustomToggle="true">
            <FluentNavLink Href="/" Match="NavLinkMatch.All" Icon="@(new Icons.Regular.Size20.Home())" IconColor="Color.Accent">
                Home
            </FluentNavLink>
            
            <FluentNavLink Href="explore" Icon="@(new Icons.Regular.Size20.Search())" IconColor="Color.Accent">
                Explore
            </FluentNavLink>
            
            @if (AuthState.IsAuthenticated)
            {
                <FluentNavLink Href="notifications" Icon="@(new Icons.Regular.Size20.Alert())" IconColor="Color.Accent">
                    Notifications
                </FluentNavLink>
                <FluentNavLink Href="inbox" Icon="@(new Icons.Regular.Size20.Mail())" IconColor="Color.Accent">
                    Inbox
                </FluentNavLink>
                <FluentNavLink Href="outbox" Icon="@(new Icons.Regular.Size20.Send())" IconColor="Color.Accent">
                    Outbox
                </FluentNavLink>
                <FluentNavLink Href="relationships" Icon="@(new Icons.Regular.Size20.People())" IconColor="Color.Accent">
                    Relationships
                </FluentNavLink>
                <FluentNavLink Href="collections" Icon="@(new Icons.Regular.Size20.Grid())" IconColor="Color.Accent">
                    Collections
                </FluentNavLink>
                <FluentNavLink Href="profile" Icon="@(new Icons.Regular.Size20.Person())" IconColor="Color.Accent">
                    Profile
                </FluentNavLink>
                
                <FluentDivider Style="margin: 0.5rem 0;" />
            }
            
            <FluentNavLink Href="diagnostics" Icon="@(new Icons.Regular.Size20.Wrench())" IconColor="Color.Accent">
                Diagnostics
            </FluentNavLink>
            
            @if (!AuthState.IsAuthenticated)
            {
                <FluentNavLink Href="login" Icon="@(new Icons.Regular.Size20.PersonKey())" IconColor="Color.Accent">
                    Login
                </FluentNavLink>
            }
        </FluentNavMenu>
    </nav>
</div>

@code {
    private bool expanded = true;

    protected override void OnInitialized()
    {
        AuthState.AuthenticationStateChanged += OnAuthStateChanged;
    }

    private void OnAuthStateChanged(object? sender, bool isAuthenticated)
    {
        InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        AuthState.AuthenticationStateChanged -= OnAuthStateChanged;
    }
}
