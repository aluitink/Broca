@inject IdentityService IdentityService

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Broca ActivityPub Browser</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="browse">
                <span class="bi bi-search-nav-menu" aria-hidden="true"></span> Browse
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="identity">
                <span class="bi bi-person-badge-nav-menu" aria-hidden="true"></span> Identity
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="settings">
                <span class="bi bi-gear-nav-menu" aria-hidden="true"></span> Settings
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="diagnostics">
                <span class="bi bi-tools-nav-menu" aria-hidden="true"></span> Diagnostics
            </NavLink>
        </div>
    </nav>

    @if (IdentityService.IsAuthenticated)
    {
        <div class="mt-auto p-3 border-top">
            <div class="text-white-50 small">
                <strong>Authenticated as:</strong><br/>
                @IdentityService.CurrentIdentity?.Username@@@IdentityService.CurrentIdentity?.Domain
            </div>
        </div>
    }
</div>

@code {
    protected override void OnInitialized()
    {
        IdentityService.IdentityChanged += OnIdentityChanged;
    }

    private void OnIdentityChanged(object? sender, EventArgs e)
    {
        StateHasChanged();
    }

    public void Dispose()
    {
        IdentityService.IdentityChanged -= OnIdentityChanged;
    }
}


