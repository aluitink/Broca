@page "/settings"
@using Broca.Sample.BlazorApp.Services
@using Broca.ActivityPub.Components
@inject AuthenticationService AuthService

<PageTitle>Settings - Broca Sample</PageTitle>

<div class="container mt-4">
    <h1>Settings</h1>

    <div class="card mb-4">
        <div class="card-header">
            <h3 class="mb-0">Anonymous Browsing</h3>
        </div>
        <div class="card-body">
            <p class="text-muted">
                Configure a system user whose public outbox will be displayed on the home page when you're not logged in.
            </p>

            <div class="mb-3">
                <label for="systemUser" class="form-label">System User Actor ID</label>
                <input 
                    id="systemUser"
                    type="text" 
                    class="form-control" 
                    @bind="_systemUserInput" 
                    placeholder="https://mastodon.social/@@user"
                    disabled="@_isSaving" />
                <div class="form-text">
                    Enter the full Actor ID URL for the user whose public feed you want to display.
                </div>
            </div>

            @if (!string.IsNullOrEmpty(_systemUserMessage))
            {
                <div class="alert @(_systemUserError ? "alert-danger" : "alert-success")">
                    @_systemUserMessage
                </div>
            }

            <div class="d-flex gap-2">
                <button 
                    class="btn btn-primary" 
                    @onclick="SaveSystemUserAsync"
                    disabled="@(_isSaving || string.IsNullOrWhiteSpace(_systemUserInput))">
                    @(_isSaving ? "Saving..." : "Save")
                </button>

                @if (!string.IsNullOrEmpty(AuthService.SystemUserActorId))
                {
                    <button 
                        class="btn btn-outline-danger" 
                        @onclick="ClearSystemUserAsync"
                        disabled="@_isSaving">
                        Clear
                    </button>
                }
            </div>

            @if (!string.IsNullOrEmpty(AuthService.SystemUserActorId))
            {
                <div class="mt-3 p-3 bg-light rounded">
                    <strong>Current System User:</strong><br/>
                    <code>@AuthService.SystemUserActorId</code>
                </div>
            }
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3 class="mb-0">Authentication Status</h3>
        </div>
        <div class="card-body">
            @if (AuthService.IsAuthenticated)
            {
                <div class="alert alert-success">
                    <i class="bi bi-check-circle"></i> <strong>Authenticated</strong>
                </div>

                <div class="mb-3">
                    <strong>Actor ID:</strong><br/>
                    <code>@AuthService.CurrentActorId</code>
                </div>

                @if (AuthService.CurrentActor != null)
                {
                    <div class="mb-3">
                        <strong>Name:</strong> @(AuthService.CurrentActor.Name?.FirstOrDefault() ?? "N/A")
                    </div>
                }

                <button class="btn btn-outline-danger" @onclick="HandleLogoutAsync">
                    <i class="bi bi-box-arrow-right"></i> Logout
                </button>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> <strong>Anonymous Mode</strong> - You are browsing anonymously
                </div>

                <p>
                    <a href="/login" class="btn btn-primary">
                        <i class="bi bi-box-arrow-in-right"></i> Login
                    </a>
                </p>
            }
        </div>
    </div>
</div>

@code {
    private string _systemUserInput = string.Empty;
    private bool _isSaving;
    private string? _systemUserMessage;
    private bool _systemUserError;

    protected override void OnInitialized()
    {
        _systemUserInput = AuthService.SystemUserActorId ?? string.Empty;
    }

    private async Task SaveSystemUserAsync()
    {
        _isSaving = true;
        _systemUserMessage = null;
        _systemUserError = false;
        StateHasChanged();

        try
        {
            await AuthService.SetSystemUserAsync(_systemUserInput);
            _systemUserMessage = "System user saved successfully!";
            _systemUserError = false;
        }
        catch (Exception ex)
        {
            _systemUserMessage = $"Error saving system user: {ex.Message}";
            _systemUserError = true;
        }
        finally
        {
            _isSaving = false;
            StateHasChanged();
        }
    }

    private async Task ClearSystemUserAsync()
    {
        _isSaving = true;
        _systemUserMessage = null;
        _systemUserError = false;
        StateHasChanged();

        try
        {
            await AuthService.SetSystemUserAsync(string.Empty);
            _systemUserInput = string.Empty;
            _systemUserMessage = "System user cleared.";
            _systemUserError = false;
        }
        catch (Exception ex)
        {
            _systemUserMessage = $"Error clearing system user: {ex.Message}";
            _systemUserError = true;
        }
        finally
        {
            _isSaving = false;
            StateHasChanged();
        }
    }

    private async Task HandleLogoutAsync()
    {
        await AuthService.LogoutAsync();
    }
}
