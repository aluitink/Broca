@code {
    private string testActorUri = "https://mastodon.social/@Gargron";
    private string actorViewUri = "https://mastodon.social/@Gargron";
    private ActorInfo? resolvedActor;
    private string? resolveError;
    private bool showActorView;

    private async Task ResolveActorAsync()
    {
        resolvedActor = null;
        resolveError = null;

        try
        {
            if (Uri.TryCreate(testActorUri, UriKind.Absolute, out var uri))
            {
                var actor = await Client.GetActorAsync(uri);
                var actorLink = actor as IObjectOrLink;
                resolvedActor = await ActorResolver.ResolveActorAsync(actorLink);
                
                if (resolvedActor == null)
                {
                    resolveError = "Failed to resolve actor";
                }
            }
            else
            {
                resolveError = "Invalid URI format";
            }
        }
        catch (Exception ex)
        {
            resolveError = $"Error: {ex.Message}";
        }
    }

    private Uri? GetOutboxUrl()
    {
        if (Client.ActorId != null && Uri.TryCreate(Client.ActorId, UriKind.Absolute, out var uri))
        {
            return new Uri(uri, "/outbox");
        }
        return null;
    }
}
