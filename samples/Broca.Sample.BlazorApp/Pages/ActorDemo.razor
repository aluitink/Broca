@page "/actordemo"
@using Broca.ActivityPub.Components
@using Broca.ActivityPub.Components.Services
@using Broca.ActivityPub.Core.Interfaces
@inject IActivityPubClient Client
@inject ActorResolutionService ActorResolver

<PageTitle>Actor Resolution & Navigation Demo - Broca</PageTitle>

<h1>Actor Resolution & Navigation Demo</h1>

<div class="demo-container">
    <section class="demo-section">
        <h2>1. Actor Resolution Service</h2>
        <p>Resolve actor URIs to display names and cached information.</p>
        
        <div class="input-group">
            <label>Actor URI:</label>
            <input type="text" @bind="testActorUri" placeholder="https://mastodon.social/@@user" class="form-control" />
            <button @onclick="ResolveActorAsync" class="btn btn-primary">Resolve Actor</button>
        </div>

        @if (resolvedActor != null)
        {
            <div class="result-card">
                <h4>Resolved Actor Info:</h4>
                <dl>
                    <dt>ID:</dt>
                    <dd>@resolvedActor.Id</dd>
                    
                    <dt>Name:</dt>
                    <dd>@resolvedActor.Name</dd>
                    
                    <dt>Username:</dt>
                    <dd>@resolvedActor.PreferredUsername</dd>
                    
                    <dt>Handle:</dt>
                    <dd>@resolvedActor.Handle</dd>
                    
                    @if (!string.IsNullOrEmpty(resolvedActor.IconUrl))
                    {
                        <dt>Avatar:</dt>
                        <dd><img src="@resolvedActor.IconUrl" alt="Avatar" style="width: 50px; height: 50px; border-radius: 50%;" /></dd>
                    }
                    
                    @if (!string.IsNullOrEmpty(resolvedActor.Summary))
                    {
                        <dt>Bio:</dt>
                        <dd>@resolvedActor.Summary</dd>
                    }
                    
                    <dt>Cached At:</dt>
                    <dd>@resolvedActor.CachedAt.ToString("HH:mm:ss")</dd>
                </dl>
            </div>
        }
        
        @if (!string.IsNullOrEmpty(resolveError))
        {
            <div class="alert alert-danger">@resolveError</div>
        }
    </section>

    <section class="demo-section">
        <h2>2. ActorView Component</h2>
        <p>View full actor profile with tabs for outbox, relationships, and collections.</p>
        
        <div class="input-group">
            <label>View Actor:</label>
            <input type="text" @bind="actorViewUri" placeholder="Actor URI, Handle, or Username" class="form-control" />
            <button @onclick="() => showActorView = true" class="btn btn-primary">View Actor</button>
        </div>

        @if (showActorView && !string.IsNullOrEmpty(actorViewUri))
        {
            <div class="actor-view-container">
                @if (actorViewUri.StartsWith("http"))
                {
                    <ActorView ActorUri="@(new Uri(actorViewUri))" />
                }
                else if (actorViewUri.Contains("@"))
                {
                    <ActorView ActorHandle="@actorViewUri" />
                }
                else
                {
                    <ActorView Username="@actorViewUri" />
                }
            </div>
        }
    </section>

    <section class="demo-section">
        <h2>3. Navigation from Activity Feed</h2>
        <p>Click on any actor in the feed below to navigate to their profile.</p>
        
        <div class="feed-demo">
            @if (Client.ActorId != null)
            {
                <ActivityFeed CollectionUrl="@GetOutboxUrl()"
                             Title="Demo Feed"
                             PageSize="10"
                             ShowObjects="true" />
            }
            else
            {
                <div class="alert alert-info">
                    <p>Configure the ActivityPub client to view the demo feed.</p>
                    <p>The feed will show activities where you can click on actors to navigate to their profiles.</p>
                </div>
            }
        </div>
    </section>

    <section class="demo-section">
        <h2>4. Actor Resolution in Renderers</h2>
        <p>Example of how actor resolution works in note renderers.</p>
        
        <div class="code-example">
            <pre><code>@@inject ActorResolutionService ActorResolver

@@code {
    private ActorInfo? actorInfo;
    
    protected override async Task OnParametersSetAsync()
    {
        if (Note?.AttributedTo?.Any() == true)
        {
            actorInfo = await ActorResolver.ResolveActorAsync(Note.AttributedTo.First());
        }
    }
    
    private void NavigateToActor()
    {
        if (actorInfo?.Id != null)
        {
            var encodedActorId = Uri.EscapeDataString(actorInfo.Id);
            Navigation.NavigateTo($"/actor?id={encodedActorId}");
        }
    }
}</code></pre>
        </div>
    </section>

    <section class="demo-section">
        <h2>5. Features Overview</h2>
        <ul>
            <li>✅ Automatic actor URI resolution with caching (15 min TTL)</li>
            <li>✅ Clickable actor personas in activity feeds</li>
            <li>✅ Dedicated actor profile page with query parameter support</li>
            <li>✅ Tabbed interface: Outbox, Following, Followers, Collections</li>
            <li>✅ Follow/Unfollow buttons for external actors</li>
            <li>✅ "Open Profile" button for viewing on home instance</li>
            <li>✅ Broca custom collection awareness</li>
            <li>✅ External vs local actor detection</li>
        </ul>
    </section>

    <section class="demo-section">
        <h2>6. URL Examples</h2>
        <p>Navigate directly to actor profiles using these URL patterns:</p>
        <ul>
            <li><code>/actor?id=https://mastodon.social/@@user</code> - View by URI</li>
            <li><code>/actor?handle=user@@mastodon.social</code> - View by handle</li>
            <li><code>/actor?username=localuser</code> - View local user</li>
            <li><code>/actor?username=localuser&tab=following</code> - View specific tab</li>
        </ul>
    </section>
</div>

